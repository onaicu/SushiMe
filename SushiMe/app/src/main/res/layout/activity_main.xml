<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    tools:context="mobi.storedot.sushime.MainActivity">

    <TextView
        android:id="@+id/SushiMe_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="0"
        android:background="#F44336"
        android:text="Welcome to SushiMe! Itadakimasu!"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/s20151020" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#A1887F"
        android:text="Email:sushime@storedot.com"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/storedot_image_view"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:layout_marginTop="4dp"
            android:src="@drawable/tel_icon" />

        <TextView
            android:id="@+id/email_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="#A1887F"
            android:text="Tel.:+123456789"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

    <TextView
        android:id="@+id/address_TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:lines="2"
        android:maxLines="2"
        android:text="Easy to get to your storedot"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#FF5722"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/address_imageButton"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/address_TextView"
        android:layout_marginRight="5dp"
        android:background="@drawable/temple33173"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/storedot_image_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/address_imageButton"
        android:scaleType="centerCrop"
        android:src="@drawable/storedot" />

</RelativeLayout>
</LinearLayout>